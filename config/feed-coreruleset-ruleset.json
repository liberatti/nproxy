{
  "name": "Core Rule Sets",
  "description": "Core Rule Sets",
  "slug": "coreruleset",
  "provider": "crs",
  "protected": false,
  "version": "3.3.6",
  "update_interval": "None",
  "type": "ruleset",
  "source": "https://github.com/coreruleset/coreruleset/archive/refs/tags/v3.3.6.zip",
  "config": [
    {
      "schema_type": "SecRule",
      "phase": 1,
      "code": 50,
      "action": "deny",
      "scope": [
        "TX:/^MSC_/"
      ],
      "condition": "!@streq 0",
      "t": [
        "none"
      ],
      "msg": "'ModSecurity internal error flagged: %{MATCHED_VAR_NAME}'",
      "logging": "nolog"
    },
    {
      "schema_type": "SecRule",
      "phase": 1,
      "code": 51,
      "action": "deny",
      "scope": [
        "MULTIPART_UNMATCHED_BOUNDARY"
      ],
      "condition": "!@eq 0",
      "t": [
        "none"
      ],
      "msg": "'Multipart parser detected a possible unmatched boundary.'",
      "logging": "log"
    },
    {
      "schema_type": "SecRule",
      "phase": 1,
      "code": 52,
      "action": "pass",
      "scope": [
        "REQUEST_HEADERS:Content-Type"
      ],
      "condition": "(?:application(?:/soap\\+|/)|text/)xml",
      "t": [
        "none",
        "lowercase"
      ],
      "ctl": [
        "requestBodyProcessor=XML"
      ],
      "logging": "nolog"
    },
    {
      "schema_type": "SecRule",
      "phase": 1,
      "code": 53,
      "action": "pass",
      "scope": [
        "REQUEST_HEADERS:Content-Type"
      ],
      "condition": "(?:application(?:/json\\+|/))json",
      "t": [
        "none",
        "lowercase"
      ],
      "ctl": [
        "requestBodyProcessor=JSON"
      ],
      "logging": "nolog"
    },
    {
      "schema_type": "SecRule",
      "phase": 2,
      "code": 55,
      "action": "deny",
      "scope": [
        "REQBODY_ERROR"
      ],
      "condition": "!@eq 0",
      "t": [
        "none"
      ],
      "ctl": [
        "requestBodyProcessor=JSON"
      ],
      "logging": "nolog",
      "severity": "2",
      "msg": "'Failed to parse request body.'",
      "logdata": "'%{reqbody_error_msg}'"
    },
    {
      "code": 900990,
      "phase": 1,
      "order": 3,
      "action": "pass",
      "logging": "nolog",
      "audit_log": "noauditlog",
      "schema_type": "SecAction",
      "t": [
        "none"
      ],
      "setvar": [
        "tx.crs_setup_version=336"
      ]
    }
  ],
